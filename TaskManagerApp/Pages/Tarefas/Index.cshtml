@page
@model IndexModel
@{
    ViewData["Title"] = "Tarefas";
}
<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Título</th>
            <th>Descrição</th>
            <th>Prioridade</th>
            <th>Data Limite</th>
            <th>Status</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarefa in Model.Tarefas)
        {
            <tr>
                <td>@tarefa.Titulo</td>
                <td>@tarefa.Descricao</td>
                <td>@tarefa.Prioridade</td>
                <td>@tarefa.DataLimite.ToString("dd/MM/yyyy")</td>
                <td>@tarefa.Status</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@tarefa.Id">Editar</a> |
                    <a asp-page="Delete" asp-route-id="@tarefa.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-page="Create">Criar Nova Tarefa</a>